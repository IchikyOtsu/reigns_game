// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- Utilisateurs (Joueurs) ---
model Player {
  id            String   @id @default(uuid())
  discordId     String   @unique
  discordPseudo String
  role          String   @default("USER") // "USER" ou "ADMIN"
  createdAt     DateTime @default(now())
  
  country       Country?
}

// --- Géopolitique ---
model Country {
  id          String   @id @default(uuid())
  azgaarId    Int?     // ID correspondant dans Azgaar
  name        String
  emblem      String?  // URL de l'image (Supabase Storage)
  
  capitalId   String?  @unique
  capital     City?    @relation("CountryCapital", fields: [capitalId], references: [id])
  
  regimeId    String
  regime      Regime   @relation(fields: [regimeId], references: [id])
  
  color       String?  // Code couleur Hex (ex: #ff0000)
  areaKm2     Float
  population  Int
  
  playerId    String   @unique
  player      Player   @relation(fields: [playerId], references: [id])
  
  religionId  String?
  religion    Religion? @relation(fields: [religionId], references: [id])
  
  cultureId   String
  culture     Culture   @relation(fields: [cultureId], references: [id])

  provinces   Province[]
  cities      City[]    @relation("CountryCities")
}

model Regime {
  id        String    @id @default(uuid())
  name      String    @unique
  category  String    // Monarchy, Republic, etc.
  
  countries Country[]
}

model Religion {
  id              String        @id @default(uuid())
  name            String        @unique
  
  typeId          String?
  type            ReligionType? @relation(fields: [typeId], references: [id])
  
  formId          String?
  form            ReligionForm? @relation(fields: [formId], references: [id])
  
  deityName       String?
  areaKm2         Float?
  followers       Int?
  potential       String?       // "Global", "Culture", "State"
  expansionFactor Float?
  
  color           String?
  description     String?

  countries       Country[]
}

model ReligionType {
  id        String     @id @default(uuid())
  name      String     @unique
  religions Religion[]
}

model ReligionForm {
  id        String     @id @default(uuid())
  name      String     @unique
  religions Religion[]
}

model Culture {
  id              String       @id @default(uuid())
  name            String       @unique
  
  typeId          String?
  type            CultureType? @relation(fields: [typeId], references: [id])

  cellCount       Int?
  expansionFactor Float?
  areaKm2         Float?
  population      Int?
  color           String?
  description     String?

  countries Country[]
}

model CultureType {
  id        String    @id @default(uuid())
  name      String    @unique
  
  cultures  Culture[]
}

// --- Géographie ---
model Province {
  id        String   @id @default(uuid())
  name      String
  color     String?
  emblem    String?
  areaKm2   Float?
  population Int?
  
  countryId String
  country   Country  @relation(fields: [countryId], references: [id])
  
  cities    City[]
}

model City {
  id         String   @id @default(uuid())
  name       String
  population Int?
  isCapital  Boolean  @default(false)
  
  isPort            Boolean @default(false)
  isWalled          Boolean @default(false)
  hasCitadel        Boolean @default(false)
  hasMarketplace    Boolean @default(false)
  hasReligiousCenter Boolean @default(false)
  hasShanty         Boolean @default(false)

  countryId  String
  country    Country  @relation("CountryCities", fields: [countryId], references: [id])
  
  capitalOf  Country? @relation("CountryCapital")
  
  provinceId String?
  province   Province? @relation(fields: [provinceId], references: [id])
}
